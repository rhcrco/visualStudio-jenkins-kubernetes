pipeline {
    agent any
    stages {
        stage('test') {
            steps {
                sh "#!/bin/bash \n" +
                    echo 'running tests'
            }
        }
        stage('build') {
            steps {
                sh "#!/bin/bash \n" +
                    echo 'building App'
            }
        }
        stage('deploy') {
            steps {
                sh "#!/bin/bash \n" +
                    echo 'Hello World'
            }
        }
    }
   }